<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground"
    android:orientation="vertical"
    tools:context=".module.view.activity.SdkActivity">
    
    <com.teamapt.monnify.sdk.customview.MonnifyLoadingIndicatorView
        android:id="@+id/monnifyLoadingIndicatorView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    
    <com.teamapt.monnify.sdk.customview.MonnifyActionBar
        android:id="@+id/monnify_action_bar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="12dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@id/footnote"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/monnify_action_bar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.teamapt.monnify.sdk.customview.SubActionBar
                android:id="@+id/sub_action_bar"
                android:layout_width="0dp"
                android:layout_height="72dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.teamapt.monnify.sdk.customview.BumpedTopLayout
                android:id="@+id/content_holder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/unclearWhite"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="12dp"
                app:allowIconBorder="false"
                app:borderColor="@color/lightGray"
                app:borderSize="1dp"
                app:cornerRadius="8dp"
                app:iconPadding="0dp"
                app:iconRadius="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sub_action_bar">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/SmallText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oxygen_regular"
                    android:text="@string/total"
                    android:textSize="@dimen/regular_text_size"
                    app:fontFamily="@font/oxygen_regular" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_amount_payable"
                    style="@style/HeaderText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oxygen_bold"
                    android:textSize="@dimen/headline_text_size"
                    android:textStyle="bold"
                    app:fontFamily="@font/oxygen_bold"
                    tools:text="NGN 3000" />

                <com.teamapt.monnify.sdk.customview.BumpedTopLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp"
                    android:background="@color/monnifyWhite"
                    android:orientation="vertical"
                    app:allowIconBorder="false"
                    app:borderColor="@color/lightGray"
                    app:borderSize="1dp"
                    app:cornerRadius="8dp"
                    app:iconPadding="0dp"
                    app:iconRadius="0dp"
                    tools:context=".module.view.fragment.OtpFragment">

                    <FrameLayout
                        android:id="@+id/fragment_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="24dp"
                        android:background="@color/monnifyTransparent" />

                </com.teamapt.monnify.sdk.customview.BumpedTopLayout>

            </com.teamapt.monnify.sdk.customview.BumpedTopLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/footnote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:drawablePadding="@dimen/default_margin_half"
        android:fontFamily="@font/oxygen_bold"
        android:text="@string/powered_by_"
        android:textColor="@color/lightGray"
        android:textSize="@dimen/font_small"
        android:textStyle="bold"
        app:fontFamily="@font/oxygen_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
