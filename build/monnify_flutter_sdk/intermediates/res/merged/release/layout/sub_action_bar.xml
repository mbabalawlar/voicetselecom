<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="?actionBarSize"
	android:background="@android:color/transparent"
	android:orientation="horizontal"
	tools:layout_height="72dp">

	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/merchantLogoView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginStart="24dp"
		android:layout_marginLeft="24dp"
		android:padding="16dp"
		android:background="@drawable/background_grey_rounded_border"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintBottom_toBottomOf="@id/line1"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@drawable/ic_default_merchant_logo" />

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/merchantNameTextView"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginLeft="16dp"
		android:layout_marginBottom="2dp"
		android:fontFamily="@font/oxygen_bold"
		android:gravity="center_vertical"
		android:maxLines="2"
		android:ellipsize="end"
		tools:text="Ifeanyi Ndebe and Sons Limited"
		android:textColor="@color/monnifyBlack"
		android:textSize="@dimen/normal_text_size"
		android:textStyle="bold"
		app:layout_constraintBottom_toBottomOf="@id/line1"
		app:layout_constraintStart_toEndOf="@id/merchantLogoView"
		app:layout_constraintEnd_toStartOf="@id/emailTextView"
		app:layout_constraintTop_toTopOf="parent"
		tools:textColor="@color/monnifyBlack"
		/>
	
	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/emailTextView"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginLeft="16dp"
		android:layout_marginEnd="16dp"
		android:layout_marginRight="16dp"
		android:ellipsize="end"
		android:fontFamily="@font/oxygen_bold"
		android:gravity="end"
		android:maxLines="1"
		android:textColor="@color/monnifyBlack"
		android:textSize="@dimen/regular_text_size"
		android:textStyle="bold"
		app:layout_constraintBottom_toBottomOf="@id/line1"
		app:layout_constraintEnd_toStartOf="@id/photoImageView"
		app:layout_constraintStart_toEndOf="@id/merchantNameTextView"
		app:layout_constraintTop_toTopOf="parent"
		tools:text="cnwagu@teamapt.com"
		tools:textColor="@color/monnifyBlack" />
	
	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/photoImageView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginEnd="24dp"
		android:layout_marginRight="24dp"
		app:layout_constraintBottom_toBottomOf="@id/line1"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@drawable/ic_photo_placeholder" />

	<View
		android:id="@+id/line1"
		android:layout_width="0dp"
		android:layout_height="0.8dp"
		android:background="@color/deepGray"
		android:layout_marginTop="24dp"
		android:layout_marginLeft="24dp"
		android:layout_marginRight="24dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintTop_toBottomOf="@id/merchantLogoView"/>

</androidx.constraintlayout.widget.ConstraintLayout>